###########################################


###########################################
# => General
###########################################

# close and kill window
super + {_,ctrl + }q
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window on workspace
super + b
    bspc node -s biggest.local

# swap the current node and the biggest window on workspace
super + shift + b
    bspc node -s biggest.window

# quit/restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# run xkill
super + alt + ctrl + q
    xkill

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# make sxhkd reload its configuration files:
super + alt + l
    betterlockscreen -l dim


###########################################
# => Hotkeys
###########################################

# terminal emulator
super + Return
    termite

# browser
super + w
    firefox

# rofi launchers
super + d
    rofi -show drun
super + e
    rofi -show emoji -modi emoji
super + c
    rofi-bluetooth
super + shift + w
    bwmenu --auto-lock 1800

# file managers
super + shift + e
    pcmanfm
super + s
    termite -e "/home/sisoro/.config/vifm/scripts/vifmrun"

# audio control
super + v
    termite -e pulsemixer
super + shift + v
    pavucontrol

# discord
super + shift + d
    discord

# steam
super + shift + s
    steam

#
# state/flags
#

# toggle floating
super + space
    bspc node focused.tiled -t floating || bspc node focused.fullscreen -t floating || bspc node focused.floating -t tiled

# toggle fullscreen
super + f
    bspc node focused.tiled -t fullscreen || bspc node focused.floating -t fullscreen || bspc node focused.fullscreen -t tiled

# set the window state
# super + {t,shift + t,s,f}
#     bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# super + {p,b,comma,period}
#     bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {comma,period}
    bspc node -f {prev,next}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# swap all nodes on the current desktop with the nodes on the last desktop
super + shift + Tab
    bspc node @DP-4:focused:/ -s @DP-0:focused:/ || \
    bspc node @DP-4:focused:/ -d @DP-0:focused || \
    bspc node @DP-0:focused:/ -s @DP-4:focused:/;

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Volume Controls
XF86AudioRaiseVolume
    pamixer -i 5; dunstify -r 2593 "Volume is $(pamixer --get-volume-human)"
XF86AudioLowerVolume
    pamixer -d 5; dunstify -r 2593 "Volume is $(pamixer --get-volume-human)"
XF86AudioMute
    pamixer -t; dunstify -r 2593 "Volume is $(pamixer --get-volume-human)"

# Volume script
# XF86AudioRaiseVolume
#     /home/sisoro/.config/dunst/volume.sh up
# XF86AudioLowerVolume
#     /home/sisoro/.config/dunst/volume.sh down
# XF86AudioMute
#     /home/sisoro/.config/dunst/volume.sh mute

# Brightness controls
XF86MonBrightnessUp
    xbacklight -inc 5; dunstify -r 2593 "Backlight is $(xbacklight -get)%"
XF86MonBrightnessDown
    xbacklight -dec 5; dunstify -r 2593 "Backlight is $(xbacklight -get)%"

# Brightness script
# XF86MonBrightnessUp
#     /home/sisoro/.config/dunst/brightness.sh up
# XF86MonBrightnessDown
#     /home/sisoro/.config/dunst/brightness.sh down

###########################################
# => Modes
###########################################

# resize mode
# -----------

super + shift + r : {h,l}
    INC={-10,+10}; bspc node @east -r $INC || bspc node @west -r $INC

super + shift + r : {j,k}
    INC={+10,-10}; bspc node @north -r $INC || bspc node @south -r $INC

# screenshot mode
# -----------

# to files
Print ; {f,s}
    {flameshot full -p ~/pictures/screenshots, flameshot screen -p ~/pictures/screenshots}
# to clipboard
ctrl + Print ; {f,s}
    {flameshot full -c, flameshot screen -c}
# kill flameshot
alt + Print
    killall flameshot

# system power mode
# -----------

# lock screen
super + shift + p ; {l}
    betterlockscreen -l dim
# exit bspwm
super + shift + p ; {e}
    bspc quit
# suspend
super + shift + p ; {s}
    betterlockscreen -l dim & sleep 0.5 && systemctl suspend
# reboot
super + shift + p ; {r}
    systemctl reboot
# shutdown
super + shift + p ; {shift + s}
    systemctl poweroff
