;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; => Colors
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[colors]
background = #282a36
foreground = #f8f8f2
red        = #ff5555
green      = #50fa7b
yellow     = #f1fa8c
blue       = #6272a4
purple     = #bd93f9
cyan       = #8be9fd
orange     = #ffb86c
pink       = #ff79c6

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; => Bar (Primary)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/primary]
; Size
width  = 100%
height = 27

; Offset
;offset-x = 50%
;offset-y = 50%

; Position
bottom = false

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.background}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = Roboto:size=10;3
font-1 = FontAwesome5Free:style=Regular:pixelsize=10:antialias=true;3
font-2 = FontAwesome5Brands:style=Regular:pixelsize=10:antialias=true;3
font-3 = FontAwesome5Free:style=Solid:pixelsize=10:antialias=true;3
font-4 = FontAwesome5Brands:style=Solid:pixelsize=10:antialias=true;3

; Modlues
modules-left   = bspwm
modules-center = time date-popup
modules-right  = cpu memory audio battery

tray-position = right
tray-padding = 0
tray-background = ${colors.background}

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; => Bar (Secondary)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/secondary]
monitor = ${env:MONITOR:HDMI-1-0}
